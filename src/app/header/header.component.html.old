<header 
  class="relative z-50 transition-all duration-300"
  [class.bg-white]="!isDark()"
  [class.bg-gray-900]="isDark()"
  [class.border-b]="true"
  [class.border-gray-200]="!isDark()"
  [class.border-gray-700]="isDark()">
  <div class="px-4 mx-auto sm:px-6 lg:px-8 xl:px-12">
    <div class="flex items-center justify-between h-12 sm:h-14 lg:h-16">

      <!-- Logo -->
      <div class="flex items-center flex-shrink-0 ml-2">
        <a routerLink="/" class="inline-flex items-center">
          <span class="font-bold text-2xl text-orange-600">pi</span>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex lg:ml-16 lg:space-x-8 xl:space-x-14">
        <a routerLink="/explore"
          routerLinkActive="text-orange-600 font-semibold"
          [routerLinkActiveOptions]="{exact: false}"
          class="text-base font-medium text-black dark:text-white hover:text-orange-600 dark:hover:text-orange-500 transition-colors duration-200 relative group">
          Explore
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-orange-600 transition-all duration-200 group-hover:w-full"
          [class.w-full]="router.url.includes('/explore')"></span>
        </a>
        <button (click)="handleSubmitClick()"
          [class.text-orange-600]="isSubmitActive()"
          [class.font-semibold]="isSubmitActive()"
          class="text-base font-medium text-black dark:text-white hover:text-orange-600 dark:hover:text-orange-500 transition-colors duration-200 relative group">
          Submit
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-orange-600 transition-all duration-200 group-hover:w-full"
          [class.w-full]="isSubmitActive()"></span>
        </button>
        @if (canReview()) {
          <a
            routerLink="/admin"
            routerLinkActive="text-orange-600 font-semibold"
            [routerLinkActiveOptions]="{exact: false}"
            class="text-base font-medium text-black dark:text-white hover:text-orange-600 dark:hover:text-orange-500 transition-colors duration-200 relative group">
            Admin
            <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-orange-600 transition-all duration-200 group-hover:w-full"
            [class.w-full]="router.url.includes('/admin')"></span>
          </a>
        }
        <a routerLink="/prompts"
          routerLinkActive="text-orange-600 font-semibold"
          class="text-base font-medium text-black dark:text-white hover:text-orange-600 dark:hover:text-orange-500 transition-colors duration-200 relative group">
          Prompts
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-orange-600 transition-all duration-200 group-hover:w-full"
          [class.w-full]="router.url.includes('/prompts')"></span>
        </a>
      </nav>

      <!-- Desktop User Section -->
      <div class="hidden lg:flex lg:items-center lg:space-x-4">

        <app-theme-toggle></app-theme-toggle>
        <!-- What's New Dropdown -->
        <!-- <div class="relative" data-dropdown="whats-new">
          <button (click)="toggleWhatsNewDropdown()"
