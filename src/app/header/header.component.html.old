            <div
              class="absolute right-0 mt-2 w-80 bg-white border border-gray-200 rounded-xl shadow-lg z-50 py-2">
              <div class="px-4 py-2 border-b border-gray-100">
                <h3 class="font-semibold text-gray-900 text-sm">Latest Updates</h3>
              </div>
              <div class="max-h-96 overflow-y-auto">
                @for (feature of getAppFeatures(); track feature) {
